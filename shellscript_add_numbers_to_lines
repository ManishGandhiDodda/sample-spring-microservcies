echo "Enter file name:"
read fname

if [ -z "$fname" ]
then
        exit
fi

terminal=`tty`

exec < $fname

count=1

while read line
do
        echo $count.$line
        count=`expr $count + 1`
done

exec < $terminal


###########file parsing#########

echo "Enter the file name"
  
read fname

if [ -z $fname ]
then
        exit
fi

terminal=`tty`

exec < $fname

while read line
do
        for i in $line
        do
                echo $i
        done
done

exec < $terminal
